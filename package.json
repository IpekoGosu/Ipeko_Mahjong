{
  "name": "ipeko-mahjong-root",
  "version": "1.0.0",
  "description": "Monorepo root for IpekoMahjong",
  "private": true,
  "scripts": {
    "install:all": "pnpm install",
    "build:all": "pnpm -r build",
    "dev:backend": "pnpm --filter ipekomahjong_backend dev",
    "dev:frontend": "pnpm --filter ipeko-mahjong-frontend dev",
    "dev": "pnpm -r --parallel dev",
    "test:backend": "pnpm --filter ipekomahjong_backend test"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "prisma",
      "@prisma/engines",
      "@swc/core",
      "@nestjs/core",
      "esbuild",
      "protobufjs"
    ]
  }
}
