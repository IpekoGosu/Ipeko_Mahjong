{
  "name": "ipeko-mahjong-root",
  "version": "1.0.0",
  "description": "Monorepo root for IpekoMahjong",
  "private": true,
  "scripts": {
    "install:all": "pnpm install && cd IpekoMahjong_Backend && pnpm install && cd ../IpekoMahjong_Frontend && pnpm install",
    "build:all": "cd IpekoMahjong_Backend && pnpm build && cd ../IpekoMahjong_Frontend && pnpm build",
    "dev:backend": "cd IpekoMahjong_Backend && pnpm dev",
    "dev:frontend": "cd IpekoMahjong_Frontend && pnpm dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\""
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7"
  }
}
